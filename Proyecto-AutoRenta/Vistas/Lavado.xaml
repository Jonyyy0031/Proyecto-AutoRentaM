<Window x:Class="Proyecto_AutoRenta.Vistas.Lavado"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Proyecto_AutoRenta.Vistas"
        mc:Ignorable="d"
        Title="Lavado" Height="450" Width="800">


    <Border CornerRadius="12">
        <Border.Background>

            <ImageBrush ImageSource="\Images\6hkkleubbd931.jpg"
                        Stretch="None"/>
        </Border.Background>
        <Border CornerRadius="10"                    
            BorderThickness="2"
            Opacity="0.95" Margin="0,1,0,-1">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#462AD8" Offset="0"/>
                    <GradientStop Color="#DA34AE" Offset="0.75"/>
                    <GradientStop Color="#8A16C1" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.Background>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                    <GradientStop Color="#060531" Offset="0"/>
                    <GradientStop Color="#1B1448" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="5"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="LOG IN"
                               Foreground="DarkGray"
                               FontSize="10"
                               FontFamily="Montserrat"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               Margin="10,0,0,0"/>
                    <Button x:Name="btnMinimize"                           
                            BorderThickness="0"
                            Content="-"
                            Foreground="White"
                            FontSize="16"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            Grid.Column="1"
                            Click="BtnMinimizar_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#28AEED"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#278BEF"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18" Height="18"
                                        CornerRadius="9"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Button x:Name="btnClose"                          
                            BorderThickness="0"
                            Content="X"
                            Foreground="White"
                            FontSize="12"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            Grid.Column="2"
                            Click="BtnCerrar_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#DA34AE"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#C62DAE"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18" Height="18"
                                        CornerRadius="9"
                                        Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
                <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
                <Label Content="Lavado de autos" HorizontalAlignment="Center" Height="56" Margin="0,22,0,0" Grid.Row="1" VerticalAlignment="Top" Width="290" FontSize="36" FontWeight="Bold">
                    <Label.Foreground>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FF17AFFF"/>
                            <GradientStop Color="#FFEFEFEF" Offset="1"/>
                        </LinearGradientBrush>
                    </Label.Foreground>
                </Label>



                <DataGrid x:Name="UserTable" 
                          AutoGenerateColumns="False" 
                          CanUserAddRows="False" 
                          IsReadOnly="True" 
                          ColumnWidth="*" 
                          IsSynchronizedWithCurrentItem="True" 
                                                    Margin="16,200,16,26" Grid.Row="1"  >
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Id" Binding="{Binding PkReserva}" />
                        <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}"/>
                        <DataGridTextColumn Header="Lavado" Binding="{Binding Lavado}"/>
                        <DataGridTextColumn Header="Modelo" Binding="{Binding Vehiculos.Modelo}" />

                        <DataGridTemplateColumn Header="Editar">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Edit" Click="EditItem"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="Borrar">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Delete" Click="DeleteItem"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
                <!--Parte de los textBox y label-->
                <TextBox x:Name="txtPkVehiculo" 
                    FontSize="13"
                    FontWeight="Medium"
                    FontFamily="Montserrat"                            
                    Foreground="White"
                    CaretBrush="LightGray"
                    BorderBrush="DarkGray"
                    BorderThickness="0,0,0,2"
                    Height="28"
                    VerticalContentAlignment="Center"
                    Margin="40,129,722,243"
                    IsEnabled="False"
                    Padding="10,0,0,0" Grid.Row="1" Background="{x:Null}" Width="NaN">
                    <TextBox.ToolTip>
                        <ToolTip Content="En este campo se enseñará el ID del vehículo"/>
                    </TextBox.ToolTip>
                </TextBox>
                <Label Content="ID" HorizontalAlignment="Left" Height="30" Margin="40,101,0,0" Grid.Row="1" VerticalAlignment="Top" Width="30" Foreground="#FFFFF3F3" FontWeight="Bold" FontSize="14"/>
                <Label Content="Selecione el vheiculo" HorizontalAlignment="Left" Height="29" Margin="133,99,0,0" Grid.Row="1" VerticalAlignment="Top" Width="170" Foreground="#FFF7F7F7" FontWeight="Bold" FontSize="16"/>
                <ComboBox HorizontalAlignment="Left" Margin="140,135,0,0" Grid.Row="1" VerticalAlignment="Top" Width="151"/>
                <Label Content="Registrar como Vheiculo limpio" HorizontalAlignment="Left" Height="32" Margin="358,99,0,0" Grid.Row="1" VerticalAlignment="Top" Width="250" Foreground="White" FontSize="16" FontWeight="Bold"/>
                <ComboBox x:Name="SelectLavado" HorizontalAlignment="Left" Margin="363,135,0,0" Grid.Row="1" VerticalAlignment="Top" Width="120">

                    <ComboBoxItem Content="Lavado"/>
                    <ComboBoxItem Content="En Proceso"/>
                    <ComboBoxItem Content="No Lavado"/>

                </ComboBox>


            </Grid>

        </Border>

    </Border>
</Window>
